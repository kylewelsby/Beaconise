<%= f.error_messages %>

<% if @event.canceled_at %>
	<% f.inputs :name => "Canceled" do %>
		<%= f.input :revoke, :as => :select, :label => "Reinstate event", :collection => [["Yes", true],["No", false]], :hint => "This event is listed as canceled, Selecting this will revoke the cancelation. " %>
	<% end %>
<% end %>

<% f.inputs :name => "Details" do %>
	<%= f.input :promoter %>
	<%= f.input :title %>
	<%= f.input :description %>
	<%= f.input :commence_at, :minute_step => 15 %>
	<%= f.input :finish_at, :minute_step => 15 %>
<% end %>

<% f.inputs :name => "Performance" do %>
	<%= f.input :artists %>
<% end %>

<% f.inputs :name => "Location" do %>
	<%= f.input :venue %>
<% end %>

<% f.inputs :name => "Tickets" do %>
	<%= f.input :commence_sale_at, :minute_step => 30, :hint => "Online ticket sales will cease 2 hours before event. <br/>SMS tickets will be available right up until 50% into the event. For venues with Beaconise equipment." %>
	<%= f.input :avalable_tickets, :as => :numeric %>
	<%= f.input :price, :as => :numeric %>
	<%= f.input :currency, :as => :select, :collection => [["£ Great British Pound", "GBP"],["€ Euro", "EUR"], ["$ United States Dollar", "USD"]]%>
<% end %>

<% f.inputs :name => "Promotional" do %>
	<%= f.input :poster %>
<% end %>
<% f.buttons do %>
	<%= f.commit_button %>
<% end %>