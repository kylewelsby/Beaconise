<% semantic_form_for @venue, :html => {:multipart => true} do |f| %>
	<%= f.error_messages %>
	<% f.inputs :name => "Details" do %>
		<%= f.input :name %>
		<%= f.input :website %>
		<%= f.input :email %>
		<%= f.input :telephone %>
	<% end %>
	<% f.inputs :name => "Address" do %>
		<%= f.input :address1 %>
		<%= f.input :address2 %>
		<%= f.input :city %>
		<%= f.input :county %>
		<%= f.input :postcode %>
		<%= f.input :country, :as => :country %>
	<% end %>
	<% f.inputs :policies do %>
		<%= f.input :genres, :as => :select %>
	<% end %>
	<% f.inputs :name => "Display Settings" do %>
		<%= f.input :logo %>
	<% end %>
	<%= f.buttons %>
<% end %>