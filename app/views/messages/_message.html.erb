<li class="message">
	<div class="sender clickable">
		<%= link_to image_tag(get_profile_picture(message.sender, :thumb)) + message.sender.login, user_path(message.sender) %>
		<div class="datetime"><%= datetime_ago(message.created_at) %></div>
	</div>
	<div class="subject clickable">
		<%= link_to h(message.subject), message_path(message) %>
		<div class="body"><%= truncate(message.body, 100) %></div>
	</div>
</li>